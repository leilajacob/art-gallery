<p id="notice"><%= notice %></p>

<h1>Listing Paintings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Size</th>
      <th>Materials</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paintings.each do |painting| %>
      <tr>
        <td><%= painting.title %></td>
        <td><%= image_tag painting.image.url(:thumb) %></td>
        <td><%= number_to_currency painting.price %></td>
        <td><%= painting.quantity %></td>
        <td><%= painting.description %></td>
        <td><%= painting.size %></td>
        <td><%= painting.materials %></td>
        <td><%= painting.category_id %></td>
        <td><%= link_to 'Show', painting %></td>
        <td><%= link_to 'Edit', edit_painting_path(painting) %></td>
        <td><%= link_to 'Destroy', painting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

