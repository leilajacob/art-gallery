<%= form_for(@painting) do |f| %>
  <% if @painting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@painting.errors.count, "error") %> prohibited this painting from being saved:</h2>

      <ul>
      <% @painting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, placeholder: "Image", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :price, placeholder: "Price", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.number_field :quantity, placeholder: "Quantity", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :size, placeholder: "Size", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :materials, placeholder: "Materials", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.select(:category_id, @categories.collect {|c| [c.name, c.id]}, {include_blank: "Sold or For Sale?"}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
